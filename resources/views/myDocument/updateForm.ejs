<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="document-content">
    <div class="add-content-document-form">
        <h3>Update Document</h3>

        <form method="POST" action="/my-document/<%= document._id %>/update?_method=PUT" name="form-create-myDocument">
            <div class="form-group" default="true">
                <label>Parent Part Title</label>
                <input name="parent_part_title" type="text" class="form-control" placeholder="Enter Parent Part Title"
                    value="<%= document.parent_part.title %>">
            </div>
            <% document.children_parts.forEach((children_part, index)=>{%>
                <div class="children-parts" index="<%= index %>>">
                    <div class="form-group" default="true">
                        <label for="ad-myDocument-myDocument">Children Part Title</label>
                        <input name="children_part_title[]" default="true" autocomplete="off" type="text"
                            class="form-control" placeholder="Enter Children Part Pitle"
                            value="<%= children_part.title %>">
                        <input hidden type="text">
                        <div class="tool-a-e">
                            <div class="icons-container">
                                <div class="icon-container">
                                    <i style="font-size:15px" class="fa plus add-p">&#xf196;</i>
                                </div>
                                <div class="icon-container" checkpoint="aic">
                                    <i style="font-size:15px" class="fa add-img">&#xf03e;</i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% var cpc_length=children_part.content.length %>
                        <% children_part.content.forEach((content, cn_index)=>{ %>
                            <% if(children_part.sort[cn_index]==0){ %>
                                <div class="form-group">
                                    <label for="children-part-content">Children Part Content</label>
                                    <textarea name="children_part_content[<%= index %>][]" type="text"
                                        class="form-control"
                                        placeholder="Enter children part content"><%= content %></textarea>
                                    <input hidden name="sort[<%= index %>][]" value=0 type="text">
                                    <div class="tool-a-e">
                                        <div class="icons-container">
                                            <div class="icon-container">
                                                <i style="font-size:15px" class="fa plus add-p">&#xf196;</i>
                                            </div>
                                            <div class="icon-container" checkpoint="aic">
                                                <i style="font-size:15px" class="fa add-img">&#xf03e;</i>
                                            </div>
                                            <% if(cpc_length> 1){ %>
                                                <div class="icon-container">
                                                    <i style="font-size:15px" class="fa sub">&#xf068;</i>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                                </div>

                                <% } else if(children_part.sort[cn_index]==1){ %>
                                    <div class="form-group">
                                        <label>Image Links</label>
                                        <input name="children_part_content[<%= index %>][]" autocomplete="off"
                                            type="text" class="form-control" placeholder="Enter image link"
                                            value="<%= content %>">
                                        <input hidden name="sort[<%= index %>][]" value=1 type="text">
                                        <div class="tool-a-e">
                                            <div class="icons-container">
                                                <div class="icon-container">
                                                    <i style="font-size:15px" class="fa plus add-p">&#xf196;</i>
                                                </div>
                                                <div class="icon-container" checkpoint="aic">
                                                    <i style="font-size:15px" class="fa add-img">&#xf03e;</i>
                                                </div>
                                                <% if(cpc_length> 1){ %>
                                                    <div class="icon-container">
                                                        <i style="font-size:15px" class="fa sub">&#xf068;</i>
                                                    </div>
                                                    <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                                        <% }); %>
                </div>
                <% }); %>


                    <button id="button-create-document" name="type" value="<%= document.type %>" type="submit"
                        class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
<script type="text/javascript" src="/js/addInputCreateDocumentForm.js"></script>