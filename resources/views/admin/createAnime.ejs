<div class="ad-createAnime form-content">
    <h2>Create Anime</h2>
    <form name="createAnime" method="POST" action="/admin/store-anime">
        <div class="form-group">
            <label for="ad-anime-name">Name</label>
            <input name="name" type="text" class="form-control" id="ad-anime-name" placeholder="Enter anime name">
        </div>
        <div class="form-group">
            <label for="ad-anime-description">Description</label>
            <input name="description" type="text" class="form-control" id="ad-anime-description" placeholder="Enter the description">
        </div>
        <div class="form-group">
            <label for="">Anime Link</label>
            <input name="image" type="text" class="form-control" id="ad-anime-link" placeholder="Enter the description">
        </div>
        <button name="submit" type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>