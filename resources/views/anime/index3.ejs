<div class="anime-content row container-fluid">
  <% animes.forEach(value=>{ %>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="<%= value.image %>" alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title">
          <%= value.name %>
        </h5>
        <p class="card-text">
          <%= value.description %>
        </p>
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
    <% }); %>
</div>